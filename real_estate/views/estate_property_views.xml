<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': 1}</field>

    </record>

    <!-- vista kanban -->

    <record id="view_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">
                <field name="property_type_id" />
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name" />
                            </strong>

                            <!-- precio epserado -->
                            <div> Precio Esperado: <field name="expected_price"></field>
                            </div>
                            <!-- mejor oferta -->
                            <div t-if="record.best_price.raw_value"> Mejor Precio: <field
                                    name="best_price" />
                            </div>

                            <div t-if="record.selling_price.raw_value"> Precio de venta: <field
                                    name="selling_price" />
                            </div>

                            <div t-if="record.tag_ids.raw_value">
                                <field name="tag_ids" widget="many2many_tags" />
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>
    <!-- Vista de lista (list) -->
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties"
                decoration-success="state == 'offer_received'"
                decoration-bf="state == 'offer_accepted'"
                decoration-muted="state == 'sold'">
                <field name="name" />
                <field name="date_availability" optional="hide" />
                <field name="bedrooms" />
                <field name="garage" />
                <field name="garden_orientation" />
                <field name="state" />
            </list>
        </field>
    </record>


    <!-- Vista de formulario (form) -->

    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button name="action_sold" string="SOLD" type="object" class="oe_highlight"
                        invisible="state in ('sold', 'canceled')"
                    />
                    <button name="action_cancel" string="CANCEL" type="object"
                        class="oe_highlight"
                        invisible="state in ('sold', 'canceled')"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <field name="tag_ids" widget="many2many_tags"
                        options="{'color_field': 'color', 'no_create': True, 'no_open': True}" />
                    <group>
                        <group>
                            <field name="state" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id"
                                options="{'no_create': True, 'no_open': True}" />
                            <field name="postcode" />
                            <field name="expected_price" />
                            <field name="best_price" />
                        </group>
                        <group>
                            <field name="date_availability" />
                            <field name="selling_price" />
                        </group>


                    </group>

                    <notebook>

                        <page name="Description" string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page name="Offers" string="Offers">
                            <field name="offer_ids"
                                readonly="state in ('offer_accepted', 'sold', 'canceled')">
                                <list
                                    decoration-danger="status == 'refused'"
                                    decoration-success="status == 'accepted'"> > <field name="price"></field>
                                    <field
                                        name="partner_id"></field>
                                    <field name="validity" />
                                    <field
                                        name="date_deadline" />
                                    <!-- Boton aceptar -->
                                    <button
                                        name="action_accept"
                                        type="object"
                                        title="Aceptar oferta"
                                        icon="fa-check"
                                        invisible="status != 'pendient'"
                                    />

                                    <!-- Botón Rechazar -->
                                    <button
                                        name="action_reject"
                                        type="object"
                                        title="Rechazar oferta"
                                        icon="fa-times"
                                        invisible="status != 'pendient'"
                                    />

                                    <field name="status"
                                        invisible="1" />
                                </list>
                                <form>
                                    <group>
                                        <field name="price"></field>
                                        <field name="partner_id"></field>
                                        <field name="validity" />
                                        <field name="date_deadline" />
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name="OtherInfo" string="Other Info">
                            <group>
                                <field name="seller_id" />
                                <field name="buyer_id" />
                            </group>

                        </page>
                        <page name="ExtraInfo" string="Extra Info">
                            <group>
                                <group>
                                    <field name="active" />
                                    <field name="last_seen" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>

    </record>

    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <!-- Campos buscables -->
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="facades" />
                <field name="living_area" string="Área mínima" />

                <!-- Filtros por estado -->
                <filter name="available" string="Disponibles"
                    domain="[('state', 'in', ['new', 'offer_received'])]" />
                <filter name="canceled" string="Cancelados"
                    domain="[('state', '=', 'canceled')]" />
                <filter name="sold" string="Vendidos"
                    domain="[('state', '=', 'sold')]" />

                <!-- Agrupadores -->
                <separator string="Agrupar Por">
                    <filter string="Código Postal" name="group_by_postcode"
                        context="{'group_by': 'postcode'}" />
                    <filter string="Estado" name="group_by_state"
                        context="{'group_by': 'state'}" />
                </separator>


            </search>
        </field>
    </record>


</odoo>